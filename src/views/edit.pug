extends ./layouts/layout 

block content 
    if errorMessage 
        span #{errorMessage}
    form(method="POST")
        input(type="text" placeholder="이메일" name="email" value=loggedInUser.email)
        input(type="text" placeholder="아이디" name="username" value=loggedInUser.username)
        input(type="text" placeholder="이름" name="name" value=loggedInUser.name)
        input(type="text" placeholder="사는곳" name="location" value=loggedInUser.location)
        input(type="submit" value="변경완료")

